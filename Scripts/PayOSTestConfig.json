  "monitoring": {
    "endpoints": {
      "health": "/health",
      "transactions": "/api/payment",
      "transactionDetail": "/api/payment/{id}",
      "transactionEvents": "/api/payment/{id}/events",
      "webhook": "/api/payment/webhook/payos",
      "return": "/api/payment/return",
      "cancel": "/api/payment/cancel"
    },
    "logLevels": {
      "PayOSService": "Debug",
      "PaymentService": "Debug",
      "PaymentController": "Information"
    }
  },
  "security": {
    "requiredHeaders": {
      "Authorization": "Bearer {jwt_token}",
      "Content-Type": "application/json"
    },
    "sensitiveFields": ["clientId", "apiKey", "checksumKey", "signature"],
    "rateLimiting": {
      "webhook": "100 requests per minute",
      "payment": "50 requests per minute"
    }
  }
}

