{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SqlServer": "",
    "MongoDb": ""
  },
  "DatabaseSettings": {
    "DefaultDatabase": "SqlServer",
    "UseMultipleDatabases": true
  },
  "Jwt": {
    "Issuer": "EduBusAPI",
    "Audience": "EduBusClients",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7
  },
  "EmailSettings": {
    "SmtpServer": "",
    "SmtpPort": 587,
    "SenderEmail": "",
    "SenderName": "EduBus",
    "Username": "",
    "Password": "",
    "EnableSsl": true
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://localhost:4200",
      "http://localhost:8080",
      "https://localhost:3000",
      "https://localhost:3001",
      "https://localhost:4200",
      "https://localhost:8080"
    ],
    "AllowCredentials": true
  },
  "LeaveRequestSettings": {
    "MinimumAdvanceNoticeHours": 12,
    "AllowEmergencyLeaveRequests": true,
    "EmergencyLeaveAdvanceNoticeHours": 2
  }
}
